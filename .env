# =============================================================================
# SELLERGO ENVIRONMENT VARIABLES - LOCAL DEVELOPMENT
# =============================================================================

# Environment
NODE_ENV=development

# Database
POSTGRES_USER=sellergo
POSTGRES_PASSWORD=sellergo_secret
POSTGRES_DB=sellergo
DATABASE_URL=postgresql://sellergo:sellergo_secret@localhost:5432/sellergo?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT (development secrets - DO NOT use in production)
JWT_SECRET=dev-jwt-secret-key-change-in-production-at-least-32-chars
JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production-at-least-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# NextAuth (for web frontend)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret-change-in-production

# Stripe (test keys - replace with your own test keys)
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_PUBLISHABLE_KEY=pk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder

# AWS S3 / MinIO for file storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=sellergo
S3_SECRET_KEY=sellergo_secret
S3_BUCKET=sellergo-uploads
S3_REGION=us-east-1

# Email (Mailhog for local development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@sellergo.local

# Google OAuth (optional - leave empty for local dev)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Meta (Facebook) Pixel Conversions API (optional)
META_ACCESS_TOKEN=
META_TEST_EVENT_CODE=

# TikTok Events API (optional)
TIKTOK_ACCESS_TOKEN=

# WhatsApp Business API (optional)
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_BUSINESS_ACCOUNT_ID=

# Sentry (optional)
SENTRY_DSN=

# Feature flags
ENABLE_MFA=true
ENABLE_OAUTH=false
ENABLE_CONVERSIONS_API=false

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Platform configuration
PLATFORM_FEE_RATE=0.0027
PLATFORM_MIN_TOP_UP=10

# API URL (for internal services)
API_URL=http://localhost:3001
PORT=3001
