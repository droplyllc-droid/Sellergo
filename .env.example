# =============================================================================
# SELLERGO ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# =============================================================================

# Environment
NODE_ENV=development

# Database
POSTGRES_USER=sellergo
POSTGRES_PASSWORD=sellergo_secret
POSTGRES_DB=sellergo
DATABASE_URL=postgresql://sellergo:sellergo_secret@localhost:5432/sellergo?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# JWT (generate with: openssl rand -base64 64)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# NextAuth (for web frontend)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# Stripe (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# AWS S3 / MinIO for file storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=sellergo
S3_SECRET_KEY=sellergo_secret
S3_BUCKET=sellergo-uploads
S3_REGION=us-east-1

# Email (SMTP)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@sellergo.shop

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Meta (Facebook) Pixel Conversions API
META_ACCESS_TOKEN=
META_TEST_EVENT_CODE=

# TikTok Events API
TIKTOK_ACCESS_TOKEN=

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_BUSINESS_ACCOUNT_ID=

# Sentry (error tracking)
SENTRY_DSN=

# Feature flags
ENABLE_MFA=true
ENABLE_OAUTH=true
ENABLE_CONVERSIONS_API=true

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Platform configuration
PLATFORM_FEE_RATE=0.0027
PLATFORM_MIN_TOP_UP=10

# API URL (for internal services)
API_URL=http://localhost:3001
